<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_activity" />

    <RelativeLayout
        android:id="@+id/phone_main_file_line"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/phone_main_file_findgarbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:text="ddsss"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/phone_main_file_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phone_main_file_findgarbage"
            android:layout_toLeftOf="@+id/phone_main_file_findgarbage"
            android:text="已发现" />
    </RelativeLayout>

    <ListView
        android:id="@+id/phone_main_file_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_main_file_line" >
    </ListView>

</LinearLayout>