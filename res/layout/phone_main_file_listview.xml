<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="15dp" >
    
   <TextView 
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/phone_main_file_list_type"
       android:text="ddd"
       android:textSize="25sp"/>
   <TextView 
       android:layout_toRightOf="@id/phone_main_file_list_type"
       android:layout_centerVertical="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="qwe"
       android:textSize="25sp"
       android:id="@+id/phone_main_file_list_size"/>
   <ImageView 
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/phone_main_file_list_im"
       android:background="@drawable/ic_arrows_right"
       /> 

</RelativeLayout>
